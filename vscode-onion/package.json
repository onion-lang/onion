{
  "name": "onion-lang",
  "displayName": "Onion Language",
  "description": "Language support for Onion programming language",
  "version": "1.0.0",
  "publisher": "onion-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "onion",
    "jvm",
    "programming language"
  ],
  "activationEvents": [
    "onLanguage:onion"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "onion",
        "aliases": [
          "Onion",
          "onion"
        ],
        "extensions": [
          ".on"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "onion",
        "scopeName": "source.onion",
        "path": "./syntaxes/onion.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Onion",
      "properties": {
        "onion.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Onion language server (onion-lsp). Leave empty to use ONION_HOME/bin/onion-lsp."
        },
        "onion.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "onion.restartServer",
        "title": "Onion: Restart Language Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x",
    "@vscode/vsce": "^2.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmizu/onion"
  },
  "license": "BSD-3-Clause"
}
