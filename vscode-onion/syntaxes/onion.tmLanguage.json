{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Onion",
  "scopeName": "source.onion",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#storage" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.onion",
          "match": "//.*$"
        },
        {
          "name": "comment.block.onion",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.onion",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.onion",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolation.onion",
              "match": "\\$\\{[^}]+\\}"
            },
            {
              "name": "variable.other.interpolation.onion",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.quoted.single.onion",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.onion",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.onion",
          "match": "\\b0[xX][0-9a-fA-F]+[lL]?\\b"
        },
        {
          "name": "constant.numeric.binary.onion",
          "match": "\\b0[bB][01]+[lL]?\\b"
        },
        {
          "name": "constant.numeric.float.onion",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?[fFdD]?\\b"
        },
        {
          "name": "constant.numeric.integer.onion",
          "match": "\\b[0-9]+[lL]?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.onion",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|finally|throw|select|case|otherwise)\\b"
        },
        {
          "name": "keyword.other.import.onion",
          "match": "\\b(import|package)\\b"
        },
        {
          "name": "keyword.operator.new.onion",
          "match": "\\b(new)\\b"
        },
        {
          "name": "keyword.other.onion",
          "match": "\\b(extends|implements|throws)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.onion",
          "match": "\\b(class|interface|enum|record)\\b"
        },
        {
          "name": "storage.modifier.onion",
          "match": "\\b(public|private|protected|static|final|abstract|sealed|override)\\b"
        },
        {
          "name": "storage.type.function.onion",
          "match": "\\b(def)\\b"
        },
        {
          "name": "storage.type.variable.onion",
          "match": "\\b(var|val)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.onion",
          "match": "\\b(Int|Long|Short|Byte|Float|Double|Boolean|Char|Unit|Void)\\b"
        },
        {
          "name": "support.type.builtin.onion",
          "match": "\\b(String|Object|Array|List|Map|Set|Option|Result)\\b"
        },
        {
          "name": "support.class.onion",
          "match": "\\b(IO|Strings|Files|DateTime|Http|Json|Regex|Math)\\b"
        },
        {
          "name": "entity.name.type.onion",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.onion",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.onion",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.onion",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.onion",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.onion",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.onion",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=)"
        },
        {
          "name": "keyword.operator.bitwise.onion",
          "match": "(&|\\||\\^|~|<<|>>|>>>)"
        },
        {
          "name": "keyword.operator.access.onion",
          "match": "(::|\\.)"
        },
        {
          "name": "keyword.operator.ternary.onion",
          "match": "(\\?|:)"
        },
        {
          "name": "keyword.operator.arrow.onion",
          "match": "(->|=>)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.onion",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.this.onion",
          "match": "\\b(this|super)\\b"
        }
      ]
    }
  }
}
